<div class="modal hide" id="modal-columns">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3><%= t(:select_columns, :default => "Select Columns") %></h3>
  </div>
  <div class="modal-body">
    <% for field in model_columns %>
      <label class="checkbox">
        <input type="checkbox" name="field[]" value="<%= field %>" <%= "checked" if session[:fields][model_name.to_sym].include?(field) %>> <%= t("app.models.#{model_name}.bs_attributes.#{field}", :default => field.capitalize) %>
      </label><br />
    <% end %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-primary" id="filter-columns" data-url="/<%= model_name %>/select_fields">Ok</button>
    <button type="button" class="btn" id="cancel-filter-columns"><%= t(:cancel, :default => "Cancel") %></button>
  </div>
</div>